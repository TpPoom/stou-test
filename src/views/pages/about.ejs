<section class="flex flex-col gap-8 px-8 md:px-16 py-8">
	<h1
		class="text-2xl font-semibold whitespace-nowrap px-4 border-s-8 border-s-primary"
	>
		ประวัติความเป็นของสมาคม
	</h1>
	<div
		class="flex flex-col mx-auto w-full md:w-3/4 lg:w-2/3 xl:w-1/2 items-center p-8 border-2 border-gray-200 rounded-xl shadow-md"
	>
		<img
			src="/assets/uploads/about/<%= img %>"
			class="object-contain mb-6 w-full rounded-lg"
			alt="STOU"
		/>
		<div id="about" class="flex flex-col gap-6 text-lg">
			<% about.split('\n').forEach(function(line) { %>
			<p>&emsp;&emsp;<%= line %></p>
			<% }); %>
		</div>
	</div>
</section>
