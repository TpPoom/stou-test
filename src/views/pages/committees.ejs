<section class="flex flex-col gap-8 px-8 md:px-16 py-8">
	<h1
		class="text-2xl font-semibold whitespace-nowrap px-4 border-s-8 border-s-primary"
	>
		คณะกรรมการ
	</h1>
	<div
		class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8 px-0 lg:px-8 xl:px-16"
	>
		<% committees.forEach(committee => { %>
		<div
			class="flex flex-col gap-4 p-4 border border-gray-200 bg-white rounded shadow-md hover:shadow-lg"
		>
			<img
				src="/assets/uploads/committees/<%= committee.name %>.jpg"
				alt="<%= committee.name %>"
				class="w-full h-96 object-cover object-top rounded"
			/>
			<div class="flex flex-col gap-1">
				<h4 class="text-xl font-medium text-center"><%= committee.name %></h4>
				<p class="text-lg text-center"><%= committee.position %></p>
			</div>
		</div>
		<% }) %>
	</div>
</section>
